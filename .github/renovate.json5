{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended", "config:best-practices"],
  lockFileMaintenance: {
    enabled: true,
    schedule: ["* */4 * * *"], // every 4 hours
  },
  timezone: "Etc/UTC",
  schedule: ["before 3am on saturday"],
  enabledManagers: ["custom.regex", "nix", "github-actions"],
  nix: {
    enabled: true,
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["/systems-linux/(.*)/configuration\\.nix$/"],
      matchStrings: ['image = "v?(?<depName>.*?):(?<currentValue>.*?)";'],
      datasourceTemplate: "docker",
      depTypeTemplate: "container",
      depNameTemplate: "{{depName}}",
      packageNameTemplate: "{{depName}}",
      versioningTemplate: "loose",
    },
  ],
  packageRules: [
    {
      matchDatasources: ["docker"],
      matchPackageNames: [
        "ghcr.io/sdr-enthusiasts/{/,}**",
        "ghcr.io/plane-watch/{/,}**",
      ],

      // ONE versioning rule that supports both patterns
      versioning: "regex:^(?<flavor>trixie-)?latest-build-(?<major>\\d+)$",
    },
  ],
}
