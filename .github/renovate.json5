{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",

  extends: ["config:best-practices"],

  timezone: "Etc/UTC",
  schedule: ["before 3am on saturday"],

  // Enable Nix support
  enabledManagers: ["nix", "regex", "github-actions"],

  nix: {
    enabled: true,
    fileMatch: ["flake\\.nix$", "flake\\.lock$", "\\.nix$"],
  },

  // Regex manager for Docker images inside Nix files
  regexManagers: [
    {
      fileMatch: ["\\.nix$"],
      matchStrings: [
        // matches image="ghcr.io/...:trixie-latest-build-3"
        'image\\s*=\\s*"(?<depName>ghcr\\.io\\/sdr-enthusiasts\\/[^:]+):(?<currentValue>[^\\"]+)"',
      ],
      datasourceTemplate: "docker",
      versioningTemplate: "regex",
      extractVersion: "trixie-latest-build-(?<version>\\d+)",
    },

    {
      // For generic Docker images that ARE SemVer (e.g. amir20/dozzle:v8.14.9)
      fileMatch: ["\\.nix$"],
      matchStrings: [
        'image\\s*=\\s*"(?<depName>[^:]+):(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: "docker",
    },
  ],

  packageRules: [
    {
      matchDatasources: ["docker"],
      commitMessageTopic: "Docker image",
    },
  ],
}
