{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",

  extends: ["config:best-practices"],

  timezone: "Etc/UTC",
  schedule: ["before 3am on saturday"],

  enabledManagers: ["nix", "regex", "github-actions"],

  nix: {
    enabled: false,
    fileMatch: ["flake\\.nix$", "flake\\.lock$", "\\.nix$"],
  },

  // --- CUSTOM VERSIONING MODULE FOR SDR-E TAGS -------------------------------
  customVersioning: {
    sdrBuild: {
      regex: "^(?<release>[a-z0-9-]+-latest-build)-(?<version>\\d+)$",
      versioning: "numeric",
    },
  },

  // --- REGEX MANAGER TO EXTRACT DOCKER IMAGES FROM NIX ------------------------
  regexManagers: [
    {
      fileMatch: ["\\.nix$"],
      matchStrings: [
        'image\\s*=\\s*"(?<depName>[^:]+):(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: "docker",
    },
  ],

  // --- APPLY CUSTOM VERSIONING TO ONLY SDR-E IMAGES ---------------------------
  packageRules: [
    {
      matchDatasources: ["docker"],
      matchDepNames: ["ghcr.io/sdr-enthusiasts/*", "ghcr.io/plane-watch/*"],
      versioning: "sdrBuild",
      commitMessageTopic: "SDR-E Docker image",
    },
  ],
}
