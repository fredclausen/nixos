{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
  ],
  timezone: 'Etc/UTC',
  schedule: [
    'before 3am on saturday',
  ],
  enabledManagers: [
    'custom.regex',
    'nix',
    'github-actions',
  ],
  nix: {
    enabled: true,
    managerFilePatterns: [
      '/flake\\.nix$/',
      '/flake\\.lock$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/configuration\\.nix$/',
      ],
      matchStrings: [
        'image = "(?<depName>.*?):(?<currentValue>.*?)";',
      ],
      datasourceTemplate: 'docker',
      depTypeTemplate: 'container',
    },
  ],
  packageRules: [
    {
      matchDatasources: [
        'docker',
      ],
      versioning: 'loose',
    },
  ],
}
