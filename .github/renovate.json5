{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",

  extends: ["config:best-practices"],

  timezone: "Etc/UTC",
  schedule: ["before 3am on saturday"],

  enabledManagers: ["nix", "regex", "github-actions"],

  nix: {
    enabled: true,
    fileMatch: ["flake\\.nix$", "flake\\.lock$", "\\.nix$"],
  },

  regexManagers: [
    {
      fileMatch: ["\\.nix$"],
      matchStrings: [
        // capture any Docker image string:  image = "ghcr.io/...:<tag>"
        'image\\s*=\\s*"(?<depName>[^:]+):(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: "docker",
      versioningTemplate: "loose", // allow tags like latest-build-XYZ
    },
  ],

  packageRules: [
    {
      matchDatasources: ["docker"],
      commitMessageTopic: "Docker image",
    },
  ],
}
