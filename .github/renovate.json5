{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended", "config:best-practices"],
  lockFileMaintenance: {
    enabled: true,
    schedule: ["* */4 * * *"], // every 4 hours
  },
  timezone: "Etc/UTC",
  schedule: ["before 3am on saturday"],
  enabledManagers: ["custom.regex", "nix", "github-actions"],
  nix: {
    enabled: true,
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["/systems-linux/(.*)/configuration\\.nix$/"],
      matchStrings: ['image = "v?(?<depName>.*?):(?<currentValue>.*?)";'],
      datasourceTemplate: "docker",
      depTypeTemplate: "container",
      depNameTemplate: "{{depName}}",
      packageNameTemplate: "{{depName}}",
      versioningTemplate: "loose",
    },
  ],
  packageRules: [
    {
      matchDatasources: ["docker"],
      matchPackageNames: [
        "ghcr.io/sdr-enthusiasts/{/,}**",
        "ghcr.io/plane-watch/{/,}**",
      ],
      // let renovate accept all tags
      versioning: "loose",

      // conditionally constrain the version parsing
      extractVersionTemplate: '{{#if (match currentValue "^trixie-latest-build-")}}trixie-latest-build-{{match currentValue "\\d+$"}}{{else}}latest-build-{{match currentValue "\\d+$"}}{{/if}}',
    },
  ],
}
